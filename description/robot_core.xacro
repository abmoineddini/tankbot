<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro" />

    <material name="white">
        <color rgba ="1 1 1 1"/>
    </material>

    <material name="blue">
        <color rgba ="0 0 1 1"/>
    </material>
    
    <material name="brown">
        <color rgba ="0.918 0.867 0.792 1"/>
    </material>

    <material name="black">
        <color rgba ="0 0 0 1"/>
    </material>

    <material name="green">
        <color rgba ="0 1 0 1"/>
    </material>

    <link name="base_link">
    </link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.105 0 0.050"/>
            <geometry>
                <box size="0.21 0.201 0.10" />
            </geometry>
            <material name="brown"/>
        </visual>
        <collision>
            <origin xyz="0.105 0 0.050"/>
            <geometry>
                <box size="0.21 0.201 0.10" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.21" y="0.201" z="0.1">
            <origin xyz="0.105 0 0.050" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.1105 0.044" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.052" length="0.02"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.052" length="0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.02" radius="0.052">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.1105 0.044" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.052" length="0.02"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.052" length="0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.02" radius="0.052">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.202 0 0" />
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.008"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.008"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.01" radius="0.008">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

</robot>